readonly INFO="[\e[1;34mINFO\e[0m]"

readonly FIREFOX="/opt/firefox/firefox"

main() {
  if [[ " $* " != *" -P "* && " $* " != " --profile " ]]; then
    if [[ " $* " != " -v " && " $* " != " --version " ]]; then
      echo -e "${INFO} Launching Firefox with \"${FIREFOX_PROFILE}\" profile"
    fi
    "${FIREFOX}" -P "${FIREFOX_PROFILE}" "$@"
  else
    "${FIREFOX}" "$@"
  fi
}

main "$@"
